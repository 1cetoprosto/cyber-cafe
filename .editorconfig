# EditorConfig helps maintain consistent coding styles for multiple developers working on the same project across various editors and IDEs.
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.swift]
indent_size = 4
quote_type = double

[*.{yml,yaml,json}]
indent_size = 2
